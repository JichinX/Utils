                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="hahhaahah" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="qwewqeeqeqeqw" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
